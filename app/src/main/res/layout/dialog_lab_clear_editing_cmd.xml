<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="550dp"
    android:layout_height="250dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView_dialog_lab_clear_editingCMD_title"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:text="真的要清除編輯區嗎?"
        android:textColor="#000000"
        android:textSize="40sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_dialog_lab_clear_editingCMD_no"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="#067AD3"
            android:text="取消"
            android:textColor="#FFFFFF"
            android:textSize="40dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button_dialog_lab_clear_editingCMD_yes"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="#F61212"
            android:text="確定刪除"
            android:textColor="#FFFFFF"
            android:textSize="40dp"
            android:textStyle="bold"/>
    </LinearLayout>

</LinearLayout>