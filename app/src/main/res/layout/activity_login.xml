<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SimpleDemo.LoginActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_logIn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_loginTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Demo App"
        android:textColor="#000000"
        android:textSize="36sp"
        app:layout_constraintBottom_toTopOf="@+id/login_linear"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_logIn" />

    <LinearLayout
        android:id="@+id/login_linear"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView_login"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#2196F3"
            android:gravity="center"
            android:text="登入畫面"
            android:textAlignment="center"
            android:textSize="30sp"
            android:textColor="#000000"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F4EFC7"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="帳號："
                android:textAlignment="center"
                android:textSize="24sp"
                android:textColor="#000000"/>

            <EditText
                android:id="@+id/editText_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:hint="請輸入帳號"
                android:inputType="textPersonName"
                android:textSize="24sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#D6F6CF"
            android:orientation="horizontal"
            tools:layout_editor_absoluteX="-115dp"
            tools:layout_editor_absoluteY="237dp">

            <TextView
                android:id="@+id/textView_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="密碼："
                android:textAlignment="center"
                android:textSize="24sp"
                android:textColor="#000000"/>

            <EditText
                android:id="@+id/editTextText_Password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:hint="請輸入密碼"
                android:inputType="textPassword"
                android:textSize="24sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#FF9800"
                android:text="登入"
                android:textSize="24sp" />

            <Button
                android:id="@+id/button_regist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#FF5722"
                android:text="註冊新帳號"
                android:textSize="24sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/textView_failHint"
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:gravity="center"
            android:text="帳號或密碼錯誤，再試一次吧"
            android:textAlignment="center"
            android:textColor="#F44336"
            android:textSize="18sp"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/textView_loginHint1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="!!! 注意 !!!"
            android:textAlignment="center"
            android:textSize="24sp"
            android:textColor="#000000"/>

        <TextView
            android:id="@+id/textView_loginHint2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="如果是第一次使用，一定需要帳號來儲存破關進度喔:D"
            android:textAlignment="center"
            android:textSize="24sp"
            android:textColor="#000000"/>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>